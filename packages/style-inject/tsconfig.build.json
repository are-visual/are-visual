{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "rootDir": "src",
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src", "../global.d.ts"],
}
