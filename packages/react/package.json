{
  "name": "@are-visual/react",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "scripts": {
    "check-type": "tsc --project tsconfig.build.json --noEmit",
    "gen-dts": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "build-dts": "pnpm gen-dts && pnpm copy-dts"
  },
  "dependencies": {
    "@are-visual/icon": "workspace:^0.0.1",
    "@are-visual/portal-hosts": "workspace:^0.0.1",
    "@are-visual/react-hooks": "workspace:^0.0.1",
    "@are-visual/style-inject": "workspace:^0.0.1",
    "@are-visual/styles": "workspace:^0.0.1",
    "@are-visual/utils": "workspace:^0.0.1"
  },
  "peerDependencies": {
    "react": ">=16.14.0",
    "react-dom": ">=16.14.0"
  },
  "buildOptions": {
    "prebuild": "check-type",
    "postbuild": "build-dts"
  },
  "publishConfig": {
    "main": "index.js",
    "directory": "dist"
  }
}