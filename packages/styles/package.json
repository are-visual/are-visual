{
  "name": "@are-visual/styles",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "scripts": {
    "prebuild": "pnpm check-type && esno ./scripts/pre-build",
    "build": "esno ./scripts/build",
    "check-type": "tsc --project tsconfig.build.json --noEmit",
    "gen-dts": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "build-dts": "pnpm gen-dts && pnpm copy-dts"
  },
  "buildOptions": {
    "prebuild": "prebuild",
    "build": "build",
    "postbuild": "build-dts"
  },
  "dependencies": {
    "@are-visual/style-inject": "workspace:^0.0.1"
  },
  "publishConfig": {
    "main": "index.js",
    "directory": "dist"
  }
}