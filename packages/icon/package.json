{
  "name": "@are-visual/icon",
  "version": "0.0.1",
  "main": "./src/index.ts",
  "scripts": {
    "build": "pnpm check-type && pnpm svgr && pnpm lint",
    "lint": "eslint \"src/**/*.{ts,tsx,js}\" --fix",
    "svgr": "npx @svgr/cli --out-dir src --index-template ./template/default-index.js --jsx-runtime automatic --icon --no-dimensions --typescript -- assets",
    "check-type": "tsc --project tsconfig.build.json --noEmit",
    "gen-dts": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "build-dts": "pnpm gen-dts && pnpm copy-dts"
  },
  "devDependencies": {
    "@svgr/cli": "^6.5.1"
  },
  "buildOptions": {
    "prebuild": "build",
    "postbuild": "build-dts"
  },
  "publishConfig": {
    "main": "index.js",
    "directory": "dist"
  }
}