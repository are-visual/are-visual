{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "rootDir": ".",
    "types": ["node"],
    "paths": {
      "@are-visual/*": ["packages/*/src"],
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src"
  ]
}
